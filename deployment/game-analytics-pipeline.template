  KinesisAnalyticsApp:
    Condition: StreamingAnalytics
    Type: AWS::KinesisAnalytics::Application
    Properties:
      ApplicationName: !Sub 'AnalyticsApplication-${AWS::StackName}'
      ApplicationDescription: !Sub 'Real-time game analytics application, for stack ${AWS::StackName}'
      ApplicationCode:
        Fn::Sub: 
          - |
              /*
              This application generates real-time metrics that are processed by Lambda.
              Query outputs should adhere to the schema defined in DESTINATION_STREAM required by the Lambda function that processes output. 
              Additional in-application streams can be pumped into the DESTINATION_STREAM table for consumption and processing by Lambda.
              Refer to the Game Analytics Pipeline Developer Guide for more information.
              */
              
              CREATE STREAM "DESTINATION_STREAM"(
              METRIC_NAME VARCHAR(1024),
              METRIC_TIMESTAMP BIGINT,
              METRIC_UNIT_VALUE_INT BIGINT,
              METRIC_UNIT VARCHAR(1024),
              DIMENSION_APPLICATION_ID VARCHAR(1024),
              DIMENSION_COUNTRY_ID VARCHAR(1024),
              DIMENSION_CURRENCY_TYPE VARCHAR (1024),
              DIMENSION_WEAPON_ID VARCHAR (1024),
              DIMENSION_MISSION_ID VARCHAR (1024),
              DIMENSION_ITEM_ID VARCHAR (1024),
              OUTPUT_TYPE VARCHAR(1024));
              
              -- Total Events
              -- Count of Total Events within period
              CREATE OR REPLACE PUMP "TOTAL_EVENTS_PUMP" AS
              INSERT INTO "DESTINATION_STREAM" (METRIC_NAME, METRIC_TIMESTAMP, METRIC_UNIT_VALUE_INT, METRIC_UNIT, DIMENSION_APPLICATION_ID, OUTPUT_TYPE)
              SELECT STREAM 'TotalEvents', UNIX_TIMESTAMP(TIME_WINDOW), COUNT(distinct_stream.event_id) AS unique_count, 'Count', distinct_stream.application_id, 'metrics'
              FROM (
                  SELECT STREAM DISTINCT
                      rowtime as window_time,
                      "AnalyticsApp_001"."event_id" as event_id,
                      "AnalyticsApp_001"."application_id" as application_id,
                      STEP("AnalyticsApp_001".rowtime BY INTERVAL '${Interval}' MINUTE) as TIME_WINDOW
                  FROM "AnalyticsApp_001"
              ) as distinct_stream
              GROUP BY 
                  application_id, 
                  TIME_WINDOW,
                  STEP(distinct_stream.window_time BY INTERVAL '${Interval}' MINUTE);
              
              -- Total Users
              -- Count of Active users within period
              CREATE OR REPLACE PUMP "USER_COUNTER_PUMP" AS
              INSERT INTO "DESTINATION_STREAM" (METRIC_NAME, METRIC_TIMESTAMP, METRIC_UNIT_VALUE_INT, METRIC_UNIT, DIMENSION_APPLICATION_ID, OUTPUT_TYPE)
              SELECT STREAM 'TotalUsers', UNIX_TIMESTAMP(TIME_WINDOW), COUNT(distinct_stream.user_id) AS unique_count, 'Count', distinct_stream.application_id, 'metrics'
              FROM (
                  SELECT STREAM DISTINCT
                      rowtime as window_time,
                      "AnalyticsApp_001"."user_id" as user_id,
                      "AnalyticsApp_001"."application_id" as application_id,
                      STEP("AnalyticsApp_001".rowtime BY INTERVAL '${Interval}' MINUTE) as TIME_WINDOW
                  FROM "AnalyticsApp_001"
              ) as distinct_stream
              GROUP BY 
                  application_id, 
                  TIME_WINDOW,
                  STEP(distinct_stream.window_time BY INTERVAL '${Interval}' MINUTE);
              
              -- Total Logins
              -- Count of logins within period
              CREATE OR REPLACE PUMP "PLAYER_LOGIN_PUMP" AS
              INSERT INTO "DESTINATION_STREAM" (METRIC_NAME, METRIC_TIMESTAMP, METRIC_UNIT_VALUE_INT, METRIC_UNIT, DIMENSION_APPLICATION_ID, OUTPUT_TYPE)
              SELECT STREAM 'TotalLogins', UNIX_TIMESTAMP(TIME_WINDOW), COUNT(distinct_stream.login_count) AS unique_count, 'Count', distinct_stream.application_id, 'metrics'
              FROM (
                  SELECT STREAM DISTINCT 
                    rowtime as window_time, 
                    "AnalyticsApp_001"."event_id" as login_count, 
                    "AnalyticsApp_001"."application_id" as application_id,
                    STEP("AnalyticsApp_001".rowtime BY INTERVAL '${Interval}' MINUTE) as TIME_WINDOW
                  FROM "AnalyticsApp_001"
                  WHERE "AnalyticsApp_001"."event_type" = 'login'
              ) as distinct_stream 
              GROUP BY 
                  application_id,
                  TIME_WINDOW,
                  STEP(distinct_stream.window_time BY INTERVAL '${Interval}' MINUTE);
              
              -- Deaths By Weapon
              -- Get the number of deaths by each weapon used in a kill in the period
              CREATE OR REPLACE PUMP "DEATHS_BY_WEAPON_PUMP" AS
              INSERT INTO "DESTINATION_STREAM" (METRIC_NAME, METRIC_TIMESTAMP, METRIC_UNIT_VALUE_INT, METRIC_UNIT, DIMENSION_WEAPON_ID, DIMENSION_APPLICATION_ID, OUTPUT_TYPE)
              SELECT STREAM 'DeathsByWeapon', UNIX_TIMESTAMP(TIME_WINDOW), WEAPON_COUNT, 'Count', WEAPON_ID, application_id, 'metrics'
              FROM (
                  SELECT STREAM
                    events."weapon_id" as WEAPON_ID,
                    events."application_id" as application_id,
                    count(*) as WEAPON_COUNT,
                    STEP(events.rowtime BY INTERVAL '${Interval}' MINUTE) as TIME_WINDOW
                  FROM "AnalyticsApp_001" events
                  WHERE events."weapon_id" is not NULL
                  AND events."event_type" = 'user_kill'
                  GROUP BY
                    STEP (events.ROWTIME BY INTERVAL '${Interval}' MINUTE),
                    events."weapon_id",
                    events."application_id"
                  HAVING count(*) > 1
                  ORDER BY STEP (events.ROWTIME BY INTERVAL '${Interval}' MINUTE), WEAPON_COUNT desc
              );
              
              -- Purchases
              -- Get all purchases grouped by country over the period
              CREATE OR REPLACE PUMP "PURCHASES_PER_CURRENCY_PUMP" AS
              INSERT INTO "DESTINATION_STREAM" (METRIC_NAME, METRIC_TIMESTAMP, METRIC_UNIT_VALUE_INT, METRIC_UNIT, DIMENSION_CURRENCY_TYPE, DIMENSION_APPLICATION_ID, OUTPUT_TYPE)
              SELECT 'Purchases', UNIX_TIMESTAMP(TIME_WINDOW), PURCHASE_COUNT, 'Count', CURRENCY_TYPE, application_id, 'metrics' FROM (
                  SELECT STREAM
                    events."currency_type" as CURRENCY_TYPE,
                    events."application_id" as application_id,
                    count(*) as PURCHASE_COUNT,
                    STEP(events.rowtime BY INTERVAL '${Interval}' MINUTE) as TIME_WINDOW
                  FROM "AnalyticsApp_001" events
                  WHERE events."currency_type" is not NULL
                  AND events."event_type" = 'iap_transaction'
                  GROUP BY
                    STEP (events.ROWTIME BY INTERVAL '${Interval}' MINUTE),
                    events."currency_type",
                    events."application_id"
                  HAVING count(*) > 1
                  ORDER BY STEP (events.ROWTIME BY INTERVAL '${Interval}' MINUTE), PURCHASE_COUNT desc
              );
              
              -- Registrations
              -- Get user registrations grouped by country over time window
              CREATE OR REPLACE PUMP "USER_REGISTRATION_BY_COUNTRY_PUMP" AS
              INSERT INTO "DESTINATION_STREAM" (METRIC_NAME, METRIC_TIMESTAMP, METRIC_UNIT_VALUE_INT, METRIC_UNIT, DIMENSION_COUNTRY_ID, DIMENSION_APPLICATION_ID, OUTPUT_TYPE)
              SELECT 'Registrations', UNIX_TIMESTAMP(TIME_WINDOW), REGISTRATION_COUNT, 'Count', COUNTRY_ID, application_id, 'metrics' FROM (
                  SELECT STREAM
                    events."country_id" as COUNTRY_ID,
                    events."application_id" as application_id,
                    count(*) as REGISTRATION_COUNT,
                    STEP(events.rowtime BY INTERVAL '${Interval}' MINUTE) as TIME_WINDOW
                  FROM "AnalyticsApp_001" events
                  WHERE events."country_id" is not NULL
                  AND events."event_type" = 'user_registration'
                  GROUP BY
                    STEP (events.ROWTIME BY INTERVAL '${Interval}' MINUTE),
                    events."country_id",
                    events."application_id"
                  HAVING count(*) > 1
                  ORDER BY STEP (events.ROWTIME BY INTERVAL '${Interval}' MINUTE), REGISTRATION_COUNT desc
              );
              
              -- TotalSpendUsd
              -- Total spend by Item (USD)
              CREATE OR REPLACE PUMP "TOTAL_SPEND_PER_ITEM_USD_ONLY_PUMP" AS
              INSERT INTO "DESTINATION_STREAM" (METRIC_NAME, METRIC_TIMESTAMP, METRIC_UNIT_VALUE_INT, METRIC_UNIT, DIMENSION_ITEM_ID, DIMENSION_APPLICATION_ID, OUTPUT_TYPE)
              SELECT 'TotalSpendUsd', UNIX_TIMESTAMP(TIME_WINDOW), TOTAL_SPEND, 'Count', ITEM_ID, application_id, 'metrics'  FROM (
                  SELECT STREAM
                    events."item_id" as ITEM_ID,
                    events."application_id" as application_id,
                    sum(events."currency_amount") as TOTAL_SPEND,
                    STEP(events.rowtime BY INTERVAL '${Interval}' MINUTE) as TIME_WINDOW
                  FROM "AnalyticsApp_001" events
                  WHERE events."item_id" is not NULL
                  AND events."event_type" = 'iap_transaction' AND events."currency_type" = 'USD'
                  GROUP BY
                    STEP (events.ROWTIME BY INTERVAL '${Interval}' MINUTE),
                    STEP (TO_TIMESTAMP("event_timestamp") by INTERVAL '${Interval}' MINUTE),
                    events."item_id",
                    events."application_id"
                  HAVING count(*) > 1
                  ORDER BY STEP (events.ROWTIME BY INTERVAL '${Interval}' MINUTE), TOTAL_SPEND desc
              );
          - {
              Namespace: !Sub '${AWS::StackName}/AWSGameAnalytics',
              Interval: !If [ConfigureDevMode, 1, 5] 
            }
      Inputs:
        - NamePrefix: AnalyticsApp
          InputSchema:
            RecordColumns:
              - Name: event_version
                SqlType: VARCHAR(8)
                Mapping: $.event.event_version
              - Name: client_id
                SqlType: VARCHAR(64)
                Mapping: $.event.client_id
              - Name: user_id
                SqlType: VARCHAR(64)
                Mapping: $.event.user_id
              - Name: event_id
